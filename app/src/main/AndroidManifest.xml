<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ashoktechforchange">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission
        android:name="android.permission.CAMERA2"
        android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Utils.MyFirebaseApp"
        android:allowBackup="true"
        android:icon="@drawable/ashokaindia"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ashokaindia"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DescriptionActivity"></activity>
        <activity android:name=".ComplaintDetailsActivity" />
        <activity android:name=".MyComplaintAcitvity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>